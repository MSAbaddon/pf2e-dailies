<label>{{@root.i18n 'label'}}</label>
<input type="number" data-action="change-charges" min="0" value="{{charges.value}}"
    max="{{charges.max}}" step="1" {{disabled (not isOwner)}}>
{{#if withMax}}
<input type="number" data-action="change-max-charges" min="0" value="{{charges.max}}" max="50"
    step="1" {{disabled (not isOwner)}}>
{{/if}}
{{#if isOwner}}
<a {{#if (eq charges.value charges.max)}}class="disabled" {{/if}} data-action="reset-charges"><i
        class="fas fa-redo" data-tooltip="{{@root.i18n 'tooltip' max=charges.max}}"></i></a>
{{/if}}
{{#if annotation}}
<button type="button" class="cast-spell blue">
    {{annotation.label}} <span class="action-glyph">{{annotation.cost}}</span>
</button>
{{/if}}