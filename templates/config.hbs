{{#if familiar}}
<h3>{{@root.i18n 'familiar'}}</h3>
<div class="form-group familiar">
    <div class="form-fields">
        <range-picker name="familiar-range" value="{{familiar.value}}" min="0"
            max="{{familiar.max}}" step="1" tabindex="-1"></range-picker>
    </div>
</div>
{{/if}}

{{#if animist}}
<h3>{{animist.title}}</h3>
{{#each animist.toggles}}
<div class="form-group animist">
    <label>{{@root.i18n (concat 'animist.' @key)}}</label>
    <input type="checkbox" name="animist" data-key="{{@key}}" {{checked this}}>
</div>
{{/each}}
{{/if}}

<h3>{{@root.i18n 'filters'}}</h3>
{{#each dailies as |daily|}}
<div class="form-group daily">
    <label>{{daily.label}}</label>
    <input type="checkbox" name="daily-enabled" data-daily-key="{{daily.key}}" {{checked
        daily.enabled}}>
</div>
{{/each}}